<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Post</h1>
    <div class="col-6 offset-3">
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="body">Post</label>
                <textarea class="form-control" type="text" id="body" name="post[body]" required><%= post.body %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update</button>
            </div>
        </form>
        <a href="/posts/<%= post.id %>">Back to Post</a>
    </div>
</div>